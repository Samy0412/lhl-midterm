<!DOCTYPE html>
<html lang = "en">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/post_items.css" type="text/css" />
    <title>Best Furniture Shop</title>
  </head>
  <body>
    <!-- <partial header> -->
    <form method='POST' action='/posts/new'>
    <div class="container-fluid">
      <div class="form-group ">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title">
      </div>
      <div class="form-group ">
        <lable for="type">Type</lable>
        <select class="form-control" name="type">
          <option selected>Choose Type</option>
          <% for(let type in types) { %>
          <option><%=type %></option>
          <% } %>
        </select>
      </div>
      <div class="form-group ">
        <lable for="price">Price</lable>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="number" class="form-control" name="price">
        </div>
      </div>
      <div class="form-group ">
        <lable for="url">Photo url</lable>
        <input type="text" class="form-control" name="photo">
      </div>
      <div class="form-group ">
        <lable for="description">Description</lable>
        <textarea rows="10" class="form-control" name="description" placeholder="Product description here"></textarea>
      </div>
      <div class="form-group ">

        <lable for="featured">Add this item to Featured Items</lable>
        <div class="custom-control custom-radio custom-control-inline">
          <input type="radio" id="featuredTrue" name="featured" class="custom-control-input" value="true">
          <label class="custom-control-label" for="customRadioInline1">Yes</label>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <input type="radio" id="featuredFalse" name="featured" class="custom-control-input" value="false" checked>
          <label class="custom-control-label" for="customRadioInline2">No</label>
        </div>

      </div>
      <div class="form-group ">
      <button type="submit" class="btn btn-success" id="post">Post</button>
      </div>
    </div>
  </body>
</html>
