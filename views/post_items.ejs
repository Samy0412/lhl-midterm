<!DOCTYPE html>
<html lang = "en">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Best Furniture Shop</title>
  </head>
  <body>
    <!-- <partial header> -->
    <form method='POST' action='/posts/new'>
    <div class="container">
      <div class="form-group col-md-6">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="item-title">
      </div>
      <div class="form-group col-md-4">
        <lable for="type">Type</lable>
        <select id="item-type" class="form-control">
          <option selected>Choose Type</option>
          <option>Chairs</option>
          <option>Tables</option>
          <option>Beds</option>
          <option>Desks</option>
          <option>Storage</option>
        </select>
      </div>
      <div class="form-group col-md-6">
        <lable for="price">Price</lable>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="number" class="form-control" id="item-price">
        </div>
      </div>
      <div class="form-group col-md-6">
        <lable for="url">Picture url</lable>
        <input type="text" class="form-control" id="picture-url">
      </div>
      <div class="form-group col-md-6">
        <lable for="description">Description</lable>
        <textarea rows="10" class="form-control" id="description" placeholder="Product description here"></textarea>
      </div>
      <div class="form-group col-md-6">
        <div class="custom-control custom-checkbox">
          <input type="checkbox" class="custom-control-input" id="featured">
          <label class="custom-control-label" for="featured">Check this to add this item to featured items list</label>
        </div>
      </div>
      <div class="form-group">
      <button type="submit" class="btn btn-success">Post</button>
      </div>
    </div>

    </form>
  </body>
</html>
